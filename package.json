{
  "name": "verona-widgets-chemistry",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start:showcase-widgets": "ng serve showcase-widgets",
    "start:all": "run-s build:all start:showcase-widgets",
    "test:project:verona-widget": "ng test verona-widget",
    "test:project:periodic-system-common": "ng test periodic-system-common",
    "test:project:periodic-system-select-widget": "ng test periodic-system-select-widget",
    "test:project:molecule-editor-widget": "ng test molecule-editor-widget",
    "test:all": "run-p test:project:*",
    "watch:project:verona-widget": "ng build verona-widget --watch",
    "watch:project:periodic-system-common": "ng build periodic-system-common --watch",
    "watch:all": "run-p watch:project:*",
    "build:project:verona-widget": "ng build verona-widget",
    "build:project:periodic-system-common": "ng build periodic-system-common",
    "build:project:periodic-system-select-widget": "ng build periodic-system-select-widget",
    "build:project:molecule-editor-widget": "ng build molecule-editor-widget",
    "build:all": "run-s build:project:verona-widget build:project:periodic-system-common build:project:periodic-system-select-widget build:project:molecule-editor-widget",
    "build:demo": "run-s build:all \"ng build showcase-widgets -- {@}\" --",
    "inline:project:periodic-system-select-widget": "node scripts/pack-html.js dist/periodic-system-select-widget/browser",
    "inline:project:molecule-editor-widget": "node scripts/pack-html.js dist/molecule-editor-widget/browser",
    "inline:all": "run-p inline:project:*",
    "prettier": "prettier -w projects/*/src/",
    "clean": "rimraf dist/",
    "generate-diagrams": "plantuml -tpng img/diagrams.puml"
  },
  "dependencies": {
    "@angular/cdk": "~20.2.14",
    "@angular/common": "^20.3.13",
    "@angular/compiler": "^20.3.13",
    "@angular/core": "^20.3.13",
    "@angular/forms": "^20.3.13",
    "@angular/material": "~20.2.14",
    "@angular/platform-browser": "^20.3.13",
    "@angular/router": "^20.3.13",
    "immer": "^11.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.9",
    "@angular/cli": "~20.0.6",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "inline-source": "^8.0.3",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.9.2"
  }
}
